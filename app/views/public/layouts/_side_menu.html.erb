<%# Side column start %>
<div class="col-sm-3 contents-right">
  <div class="category-box">
    <ul>
    <% list_categories.each do |category| %>
      <% count = category.articles.count %>
      <% name = "#{category.name} (#{count})" %>
      <li><%= link_to name, public_articles_in_category_path(category.id) %></li>
    <% end %>
    </ul>
  </div>
</div>
<%# Side column end %>
